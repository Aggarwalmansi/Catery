generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  password  String
  name      String?
  role      Role      @default(CUSTOMER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
  queries   Query[]
  vendor    Vendor?   // Relation to Vendor profile if user is a caterer
  kutumbhRooms KutumbhRoom[]
  enquiries    Enquiry[]
}

model Vendor {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  userId      String     @unique @db.ObjectId // Link to User
  user        User       @relation(fields: [userId], references: [id])
  
  name        String
  description String?
  email       String     @unique
  phone       String?
  address     String?
  isVerified  Boolean    @default(false)
  image       String?
  occasions   String[]
  rating      Float      @default(0)
  reviewCount Int        @default(0)
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  status      VendorStatus @default(ACTIVE)
  
  menuItems   MenuItem[]
  packages    Package[]
  bookings    Booking[]
  enquiries   Enquiry[]
  kutumbhRooms KutumbhRoom[]
}

enum VendorStatus {
  ACTIVE
  PAUSED
  DISABLED
}

model MenuItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  price       Float
  category    String
  isVeg       Boolean  @default(true)
  vendorId    String   @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  vendor      Vendor        @relation(fields: [vendorId], references: [id])
  packages    PackageItem[]
}

model Occasion {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  image       String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Package {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  price       Float
  minPlates   Int           @default(50)
  vendorId    String        @db.ObjectId
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  vendor      Vendor        @relation(fields: [vendorId], references: [id])
  items       PackageItem[]
  bookings    Booking[]
  activeKutumbhRooms KutumbhRoom[]
}

model PackageItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  packageId String   @db.ObjectId
  itemId    String   @db.ObjectId
  
  package   Package  @relation(fields: [packageId], references: [id], onDelete: Cascade)
  menuItem  MenuItem @relation(fields: [itemId], references: [id])

  @@unique([packageId, itemId])
}

model Booking {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  userId      String        @db.ObjectId
  vendorId    String        @db.ObjectId
  packageId   String?       @db.ObjectId
  enquiryId   String?       @db.ObjectId
  occasion    String
  date        DateTime
  guestCount  Int
  totalAmount Float
  status      BookingStatus @default(PENDING)
  
  // Audit fields
  notes       String?
  address     String?
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  user        User          @relation(fields: [userId], references: [id])
  vendor      Vendor        @relation(fields: [vendorId], references: [id])
  package     Package?      @relation(fields: [packageId], references: [id])
  enquiry     Enquiry?      @relation(fields: [enquiryId], references: [id])
}

model Query {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  ticketId    String   @unique
  type        String   // Technical, Feedback, Complaint, Other
  subject     String
  description String
  status      String   @default("Pending") // Pending, Resolved, Rejected
  adminReply  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id])
}

enum Role {
  CUSTOMER
  ADMIN
  VENDOR
}

enum BookingStatus {
  PENDING
  APPROVED
  ADVANCE_PAID
  CONFIRMED
  COMPLETED
  CANCELLED_BY_USER
  REJECTED_BY_VENDOR
  CANCELLED_BY_ADMIN
  CANCELLED
}

model KutumbhRoom {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  roomId        String   @unique
  hostUserId    String   @db.ObjectId
  packageId     String?  @db.ObjectId
  catererId     String   @db.ObjectId
  
  // Serialized state including items, addons, comments, restrictions, total price, and lock status
  currentState  Json
  
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  host          User     @relation(fields: [hostUserId], references: [id])
  package       Package? @relation(fields: [packageId], references: [id])
  caterer       Vendor   @relation(fields: [catererId], references: [id])
  enquiries     Enquiry[]
}

model Enquiry {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  catererId     String   @db.ObjectId
  roomId        String   @db.ObjectId
  
  status        EnquiryStatus @default(PENDING)
  
  // Content
  selectedItems Json     // Array of items with details
  notes         String?
  guestCount    Int?
  itemCount     Int
  
  // Caterer response
  quotePrice    Float?
  catererMessage String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id])
  caterer       Vendor   @relation(fields: [catererId], references: [id])
  room          KutumbhRoom @relation(fields: [roomId], references: [id])
  bookings      Booking[]
}

enum EnquiryStatus {
  PENDING
  RESPONDED
  ACCEPTED
  CLOSED
}
